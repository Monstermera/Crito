@using Umbraco.Cms.Core.Models
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage


<section class="showcase">
    <img class="header-effects" src="~/images/effects/Showcase-element.svg" />

    <div class="container">
        <div class="content">
            <div class="title">@Model.Value("showcaseTitle")</div>
            <p>@Model.Value("showcaseDescription")</p>
            <a class="btn-theme" href=@Model.Value("showcaseButtonURL")>@Model.Value("showcaseButtonText")<i class="fa-sharp fa-regular fa-arrow-up-right"></i></a>
            <a class="clear-btn" href="/service">Learn More<i class="fa-sharp fa-regular fa-arrow-up-right"></i></a>
        </div>
        <div class="showcase-img">
            @{
                var showcaseImage = Model.Value<MediaWithCrops>("showcaseImage");
                if (showcaseImage != null)
                {
                    <img src="@showcaseImage.MediaUrl()" alt="@Model.Value("showcaseTitle")" />
                }
            }
        </div>
    </div>
</section>