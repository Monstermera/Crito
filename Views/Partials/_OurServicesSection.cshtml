@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<ContentModels.HomePage>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;

<section class="services">  
    <img class="service-effects" src="~/images/effects/Service-element.svg" />

    <div class="container">
       <div class="section-details">
            <p class="heading">@Model.Value("ourServicesSectionTitle")</p>
            <h5>@Model.Value("ourServicesSectionHeading")</h5>
        </div>
        
        <div class="service-group">
            @Html.GetBlockListHtml(Model.OurServices)
        </div>

        <div class="more">
            <a href="@Model.Value("ourServicesSectionButtonUrl")" class="clear-btn">@Model.Value("ourServicesSectionButtonText")<i class="fa-sharp fa-regular fa-arrow-up-right"></i></a>
        </div>
    </div>
</section>