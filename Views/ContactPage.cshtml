@using Crito.Models;
@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<ContentModels.ContactPage>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
    Layout = "LayoutWithBreadcrumb.cshtml";

    var contactForm = new ContactForm();
}



<!-- ========================================================= COMPANY BOX ========================================================= -->
<section class="contact">
    <div class="container">
        <div class="info-box">
            <i class="fa-sharp fa-solid fa-location-dot"></i>
            <div>
                <h5>Visit us</h5>
                <p>@Model.Value("contactInfoStreetName")</p>
                <p>@Model.Value("contactInfoPostalCode") @Model.Value("contactInfoCity")</p>
            </div>
        </div>

        <div class="info-box">
            <i class="fa-solid fa-phone"></i>
            <div>
                <h5>Call us</h5>
                <p>@Model.Value("contactInfoPhoneNumber1")</p>
                <p>@Model.Value("contactInfoPhoneNumber2")</p>
            </div>
        </div>

        <div class="info-box">
            <i class="fa-solid fa-envelope"></i>
            <div>
                <h5>Email us</h5>
                <p>@Model.Value("contactInfoEmail1")</p>
                <p>@Model.Value("contactInfoEmail2")</p>                    
            </div>
        </div>
    </div>
</section>





<!-- ========================================================= CONTACT FORM ========================================================= -->
<section class="contact-form">
    <div class="container">
    <h2>Leave us a message <br> for any information</h2>
    


        @using (Html.BeginUmbracoForm("Index", "Contacts", FormMethod.Post))
        {
            <div asp-validation-summary="ModelOnly" class="form-group message"></div>

            <div class="name form-group">
                <input asp-for="@contactForm.Name" type="text" class="invalid" placeholder="Name*">
                <span asp-validation-for="@contactForm.Name" class="text-danger"></span>
            </div>

            <div class="email form-group">
                <input asp-for="@contactForm.Email" type="text" class="invalid" placeholder="Email*">
                <span asp-validation-for="@contactForm.Email" class="text-danger"></span>
            </div>

            <div class="message form-group">
                <textarea asp-for="@contactForm.Message" class="invalid" placeholder="Your Message*"></textarea>
                <span asp-validation-for="@contactForm.Message" class="text-danger"></span>
            </div>
            <button class="btn-theme" type="submit">Send Message<i class="fa-sharp fa-regular fa-arrow-up-right"></i></button>
        }

    </div>
</section>





<!-- ========================================================= MAP ========================================================= -->
<section class="map">
    <iframe
        src="@Model.Value("googleMapsUrl")"
        allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
</section>